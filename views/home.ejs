                    <p id="friend-<%= friend.from_user.id %>" class="friends-of-user">
                        <a href="/users/profile/<%= friend.from_user.id %>"><%= friend.from_user.name %></a>
                        <a class="remove-friend-button" href="/friendship/toggle/<%= friend.from_user.id %>">
                           <button type="button">
                                Delete Request
                            </button>
                        </a>
                    </p>
                <% } %>
            <% } %>
        </div>
        <% } %>
     </span> 

    
    

   
</div>

