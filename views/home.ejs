
<link rel="stylesheet" href="/css/home.css">
<% if(locals.user){ %>
<div id="home-container">
    <span class="post"> 
    <section id="feed-posts">
            <h4>Posts</h4>
           
            <form action="/posts/create" id="new-post-form" method="POST" enctype="multipart/form-data" >
                <textarea name="content" cols="30" rows="3" placeholder="Write your post here..." required></textarea>
               
                <input class="post-submit" type="file" name="avatar" placeholder="Post file" style="color: rgb(0, 68, 255); background-color: white; font-size: 15px; font-family:cursive; border: blue solid 3px; ">
            &nbsp;  &nbsp;  &nbsp;
                <input class="post-submit" type="submit" value="Post" style="color: rgb(31, 94, 231); background-color: white; font-size: 20px; font-family:cursive; border: blue solid 3px; ">
            </form>
            
        
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        
                    <%- include('_post') -%>
                        
                    <%} %>
                </ul>
            </div>
        </section>
    </span>


        
         <!-- <section id="users-container"> -->
        <!-- If user is signed in then show his/her friends -->
       <span class="Friends">
        <div id="users-friends">
            <% if(locals.user){ %>
            <h4 style="text-align: center; border-bottom: solid white 3px;">Friends</h4>

            <% for(friend of logged_in_user.friendships){%>
                <!-- If request is accepted -->
                <% if(friend.accepted){ %>
                    <!-- if User himself had sent the request -->
                    <% if(locals.user.id == friend.from_user.id){ %>
                        <!-- then friend details are in to_user object -->
                        <p id="friend-<%= friend.to_user.id %>" class="friends-of-user">
                            <a href="/users/profile/<%= friend.to_user.id %>"><%= friend.to_user.name %></a>
                            <a class="remove-friend-button" href="/friendship/toggle/<%= friend.to_user.id %>">
                                <button type="button">
                                    Remove friend
                                </button>
                            </a>
                        </p>
                    <% }else{ %>
                        <!-- then friend details are in from_user object -->
                        <p id="friend-<%= friend.from_user.id %>" class="friends-of-user">
                            <a href="/users/profile/<%= friend.from_user.id %>"><%= friend.from_user.name %></a>
                            <a class="remove-friend-button" href="/friendship/toggle/<%= friend.from_user.id %>">
                                <button type="button">
                                    Delete friend
                                </button>
                            </a>
                        </p>
                    <% } %>

                <% } %>
                

                
            <% } %>
        </div>
       
            <div id="users">
                <h4 style="text-align: center; border-bottom: solid white 3px;">Users</h4>
                <% for(u of all_users){%>
                    <p>
                        <img src="<%=u.avatar %>" alt="<%= u.name %>" width="30">
                        <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
                    </p>
                <% } %>
            </div>
        
       </span>
<span class="sent">
        <div id="users-sent-requests">
            <h4 class="divide">Sent Requests</h4>
           
            <% for(friend of logged_in_user.friendships){%>
                <% if(!friend.accepted && locals.user.id == friend.from_user.id){ %>
                    <!-- then friend details are in to_user object -->
                    <p id="friend-<%= friend.to_user.id %>" class="friends-of-user">
                        <img src="<%=friend.to_user.avatar %>" alt="<%=friend.to_user.name %>" width="30">
                        <a href="/users/profile/<%= friend.to_user.id %>"><%= friend.to_user.name %></a>
                        <a class="remove-friend-button" href="/friendship/toggle/<%= friend.to_user.id %>">
                            <button type="button" class="sent-rec">
                                Cancel Request
                            </button>
                        </a>
                    </p>
                <% } %>
            <% } %>
        </div>
        
    <!-- </span>
     <span class="recieve"> -->
        <div id="users-received-requests">
            <h4 class="divide">Received Requests</h4>
            
            <% for(friend of logged_in_user.friendships){%>
                <% if(!friend.accepted && locals.user.id == friend.to_user.id){ %>
